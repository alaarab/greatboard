<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-md-6">
        <h1 class="display-5 fw-bold">GreatBoard</h1>
        <p class="col-md-8 fs-4">A great place to share ideas.</p>
      </div>
      <div class="col-md-6">
        <%= image_tag "nyan.gif", :size => '260x180', class: "img-fluid" %>
      </div>
    </div>
  </div>
</div>

<%= turbo_stream_from "posts" %>

<div class="row" style=="height:500px">
  <div class="col-md-6">
    <div class="card bg-light h-100">
      <div class="card-body">
        <h2>Make a post</h2>
        <%= turbo_frame_tag "post_form" do %>
          <%= render "posts/form", post: @post %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card bg-light" style="height:420px">
      <div class="card-body">
        <div style="overflow-y: auto;max-height: 400px;">
          <h2>Latest Posts</h2>
          <%= turbo_frame_tag "posts" do %>
            <%= render @posts %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>